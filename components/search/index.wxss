/* components/search/index.wxss */
.search {
  position: relative;
  padding: 10px 5px;
  background: #eb4450;
}


.search .icon {
  width: 100%;
  height: 30px;
  border-radius: 5px;
  background: #fff;
  font-size: 12px;
  color: #bebebe;
  line-height: 30px;
  text-align: center;
}

.search .icon icon {
  font-size: 20px;
  vertical-align: middle;
  margin-right: 5px;
}