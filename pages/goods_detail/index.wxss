/* pages/goods_detail/index.wxss */
.detail swiper{
  height: 600rpx;
  margin-bottom: 100rpx;
}
.detail image{
  width: 100%;
  height: 100%;
}
.detail .price{
  margin: 20rpx  10rpx 10rpx 10rpx;
  color: #ec5965;
  font-size: 20px;
}
.detail .content{
  display: flex;
  padding:20rpx 10rpx; 
  justify-content: space-between;
}
.detail .content .content_left{
   flex: 1;
  font-size: 14px;
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.detail .content .content_right{
  display: flex;
  padding: 0 20rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  margin-left: 60rpx;
  text-align: center;
  font-size: 12px;
  color: #999999;
  border-left: 1px solid #f7f7f7;
}
.express{
  padding: 0 10rpx 30rpx 10rpx;
  color: #a6a6a6;
  font-size: 12px;
  border-bottom: 20rpx solid #eee;
  margin-bottom: 20rpx;
}

.footer{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  background: #fff;
}
.footer .service{
  padding: 10rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}
.footer .cart{
  padding: 10rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}
.footer .add_cart{
  flex: 1;
line-height: 100rpx;
text-align: center;
  font-size: 12px;
  color: #fff;
  background: #f4b73f;
}
.footer .purchase{
  flex: 1;
line-height: 100rpx;
text-align: center;
  font-size: 12px;
  color: #fff;
  background: #eb4450;
}
.contact{
  position: absolute;
  top: 0;
  left: 0;
  height: 100rpx;
  width: 170rpx;
  opacity: 0;
}